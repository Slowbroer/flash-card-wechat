.book-list{

}

.book-item {
  background: whitesmoke;
  margin: 10rpx;
  padding: 25rpx 20rpx;
  font: xx-large;
  font-weight: bold;
  color: darkslategray;
  /* font-size: 35rpx; */
}

.add-btn {
  position: fixed;
  right: 0;
  top: 200rpx;
  font-size: 30rpx;
  color: whitesmoke;
  background: orange;
  margin: 25rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  opacity: 0.7;
}

.text-btn {
  display: flex;
  width: 60px;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.edit-btn {
  background-color: #ff976a;
}
.delete-btn {
  background-color: #ee0a24;
}

.van-swipe-cell__right {
  display: inline-block;
  width: 120px;
  font-size: 15px;
  color: #fff;
  text-align: center;
  /* background-color: #1989F2; */
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-pack: center;
  -webkit-box-align: center;
}
.van-swipe-cell__left {
  display: inline-block;
  width: 60px;
  font-size: 15px;
  color: #fff;
  text-align: center;
  background-color: #1989fa;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-pack: center;
  -webkit-box-align: center;
}


