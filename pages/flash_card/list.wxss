/* pages/flash_card/list.wxss */
.book-title {
  font-size: 60rpx;
  font-weight: bolder;
  text-align: center;
  padding-bottom: 20rpx;
}
.card-item {
  background: whitesmoke;
  margin: 10rpx;
  padding: 25rpx 20rpx;
  font: xx-large;
  font-weight: bold;
  color: darkslategray;
  /* font-size: 35rpx; */
}
.add-btn {
  position: fixed;
  right: 0;
  top: 200rpx;
  font-size: 30rpx;
  color: whitesmoke;
  background: orange;
  margin: 25rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  opacity: 0.7;
}
.check-btn {
  position: fixed;
  right: 0;
  top: 300rpx;
  font-size: 30rpx;
  color: black;
  background: greenyellow;
  margin: 25rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  opacity: 0.7;
}

.van-swipe-cell__left,
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  font-size: 15px;
  color: #fff;
  text-align: center;
  background-color: #f44;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-pack: center;
  -webkit-box-align: center;
}